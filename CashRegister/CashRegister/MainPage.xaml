<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CashRegister"
             x:Class="CashRegister.MainPage">

    <StackLayout BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center">
        <Button Text="Add Test User to Database" x:Name="btnTestAddUser" Clicked="btnTestAddUser_Clicked"/>
        <Button Text="Show users from Database" x:Name="btnShowUser" Clicked="btnShowUsers_Clicked"/>
        
        <Label HeightRequest="50"></Label>
        <Button Text="To Statistics" Clicked="ToStatistics"></Button>
        <Button Text="Sign up" Clicked="ToSignup"></Button>
        <Button Text="Login" Clicked="ToLogin"></Button>
        <Label HeightRequest="50"></Label> 
        
        <Button Text="Click" x:Name="btnScan" Clicked="btnScan_Clicked"/>
        <Entry x:Name="txtBarcode" Placeholder="Barcode" BackgroundColor="Black" TextColor="AntiqueWhite"/>
        <Entry x:Name="txtArticleDescr" Placeholder="Description" BackgroundColor="Black" TextColor="AntiqueWhite"/>
    </StackLayout>
</ContentPage>
