<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CashRegister"
             x:Class="CashRegister.MainPage"
             BackgroundColor="White">

    <Frame Style="{StaticResource DefaultFrame}">
        <StackLayout Orientation="Vertical" WidthRequest="250">
            <Label Style="{StaticResource TitleLabel}" Text="Cas# Register" HorizontalOptions="Center"/>
            <Label HeightRequest="16"/>
            <Label Style="{StaticResource BigLabel}" Text="Une application pour vendeurs et consommateurs" TextColor="Gray" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
            <Label HeightRequest="8"/>
            <Button Style="{StaticResource DefaultButton}" Text="Sign up" x:Name="SignupButton" Clicked="ToSignup"/>
            <Button Style="{StaticResource DefaultButton}" Text="Login" x:Name="LoginButton" Clicked="ToLogin"/>
            <Button Style="{StaticResource DefaultButton}" Text="Logout" x:Name="LogoutButton" Clicked="Logout"/>
            <Button Style="{StaticResource DefaultButton}" Text="To Main Menu" x:Name="ToMainMenuButton" Clicked="ToMainMenu"/>
        </StackLayout>
    </Frame>
</ContentPage>
