<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CashRegister.View.LoginView"
             BackgroundColor="White">
    
    <ContentPage.Content>
        <Frame Style="{StaticResource DefaultFrame}">
            <StackLayout WidthRequest="200">
                <Label Style="{StaticResource TitleLabel}" Text="Login" HorizontalOptions="Center"/>
                <Label HeightRequest="16"/>
                <Entry Placeholder="Email" Text="leon" x:Name="Email" Keyboard="Email"/>
                <Entry Placeholder="Password" Text="leon" x:Name="Pass" IsPassword="true"/>
                <Button Style="{StaticResource DefaultButton}" Text="Login" Clicked="Login"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>