<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CashRegister.View.SignupView"
             BackgroundColor="White">

    <ContentPage.Content>
        <Frame Style="{StaticResource DefaultFrame}">
            <StackLayout WidthRequest="200">
                <Label Style="{StaticResource TitleLabel}" Text="Sign up" HorizontalOptions="Center"/>
                <Label HeightRequest="16"/>
                <Entry Style="{StaticResource DefaultEntry}" Placeholder="Email" x:Name="Email" Keyboard="Email"/>
                <Entry Style="{StaticResource DefaultEntry}" Placeholder="Password" x:Name="Pass" IsPassword="true"/>
                <Entry Style="{StaticResource DefaultEntry}" Placeholder="Password confirmation" x:Name="PassConf" IsPassword="true"/>
                <Entry Style="{StaticResource DefaultEntry}" Placeholder="First Name" x:Name="FirstName"/>
                <Entry Style="{StaticResource DefaultEntry}" Placeholder="Last Name" x:Name="LastName"/>
                <Picker x:Name="RolePicker"/>
                <Button Style="{StaticResource DefaultButton}" Text="Sign up" Clicked="Signup"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>