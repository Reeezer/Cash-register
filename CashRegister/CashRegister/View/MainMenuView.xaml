<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CashRegister.View.MainMenuView"
             BackgroundColor="White">
    
    <ContentPage.Content>
        <Frame Style="{StaticResource DefaultFrame}">
            <StackLayout Orientation="Vertical" HorizontalOptions="Center" WidthRequest="200">
                <Label Style="{StaticResource TitleLabel}" Text="Main menu" HorizontalOptions="Center"/>
                <Label HeightRequest="16"/>
                <Button Style="{StaticResource DefaultButton}" x:Name="StatisticsButton" Text="To Statistics" Clicked="ToStatistics"/>
                <Button Style="{StaticResource DefaultButton}" x:Name="CashRegisterButton" Text="To Cash register" Clicked="ToCashRegister"/>
                <Label HeightRequest="50"/>

                <Button Style="{StaticResource DefaultButton}" Text="[Debug] Scan" x:Name="ScanButton" Clicked="Scan"/>
                <Entry x:Name="txtBarcode" Placeholder="Barcode" BackgroundColor="Black" TextColor="White" PlaceholderColor="Gray"/>
                <Entry x:Name="txtArticleDescr" Placeholder="Description" BackgroundColor="Black" TextColor="White" PlaceholderColor="Gray"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>