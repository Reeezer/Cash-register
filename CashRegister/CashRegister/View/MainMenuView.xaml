<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CashRegister.View.MainMenuView"
             BackgroundColor="White">
    
    <ContentPage.Content>
        <Frame BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center">
            <StackLayout Orientation="Vertical">
                <Label Style="{StaticResource TitleLabel}" Text="Main menu"/>

                <Button Style="{StaticResource DefaultButton}" Text="[Debug] Add user to DB" x:Name="AddUserButton" Clicked="AddUser"/>
                <Button Style="{StaticResource DefaultButton}" Text="[Debug] Show users from DB" x:Name="ShowUsersButton" Clicked="ShowUsers"/>

                <Label HeightRequest="50"/>
                <Button Style="{StaticResource DefaultButton}" Text="To Statistics" Clicked="ToStatistics"/>
                <Button Style="{StaticResource DefaultButton}" Text="To Cash register" Clicked="ToCashRegister"/>
                <Label HeightRequest="50"/>

                <Button Style="{StaticResource DefaultButton}" Text="[Debug] Scan" x:Name="ScanButton" Clicked="Scan"/>
                <Entry x:Name="txtBarcode" Placeholder="Barcode"/>
                <Entry x:Name="txtArticleDescr" Placeholder="Description" />
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>